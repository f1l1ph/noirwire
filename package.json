{
  "name": "my-turborepo",
  "version": "0.0.0",
  "private": true,
  "description": "NoirWire - Private payments on Solana",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "build": "turbo run build",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.5.8"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
