# Noirwire Environment Configuration
# Copy this to .env.local and fill in your values

# ============================================================================
# Solana Blockchain Configuration
# ============================================================================

# Solana RPC Endpoint
# Production: https://api.mainnet-beta.solana.com
# Testnet: https://api.devnet.solana.com
# Localnet: http://localhost:8899
SOLANA_RPC_URL=https://api.devnet.solana.com

# Noirwire Program ID (deployed on Solana)
# This is where your zk-pool and other contracts are deployed
NOIRWIRE_PROGRAM_ID=<YOUR_PROGRAM_ID_HERE>

# Solana Commitment Level for RPC queries
# Options: processed, confirmed, finalized
# production: finalized (slower but most secure)
# development: processed (faster)
SOLANA_COMMITMENT=confirmed

# Optional: Admin keypair (JSON array or base58) for publishing Merkle roots
# SOLANA_ADMIN_KEYPAIR=[1,2,3,...]

# ============================================================================
# API Configuration
# ============================================================================

# API URL (for environment detection)
API_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# ============================================================================
# Database Configuration (Future)
# ============================================================================

# Supabase Configuration (optional - for persistent storage)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key
# SUPABASE_SERVICE_KEY=your-service-role-key

# ============================================================================
# Logging Configuration
# ============================================================================

# Log Level: debug, info, warn, error
LOG_LEVEL=debug

# ============================================================================
# Circuit Configuration
# ============================================================================

# Supported circuits: shield, transfer, unshield
# These match your noir circuits
CIRCUITS=shield,transfer,unshield

# Merkle Tree Depth (for validation)
# Should match circuit constraints
MERKLE_TREE_DEPTH=20

# ============================================================================
# Security Configuration
# ============================================================================

# JWT Secret (if using authentication)
# JWT_SECRET=<LONG_RANDOM_STRING>

# CORS Origins (comma-separated for production)
# CORS_ORIGINS=https://app.noirwire.com,https://www.noirwire.com

# ============================================================================
# Monitoring (Future)
# ============================================================================

# Sentry DSN (error tracking)
# SENTRY_DSN=https://your-sentry-url

# ============================================================================
# Development Only
# ============================================================================

# Skip blockchain sync in development
# SKIP_BLOCKCHAIN_SYNC=false
